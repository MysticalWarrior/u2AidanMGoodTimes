<Window x:Class="u2AidanMGoodTimes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:u2AidanMGoodTimes"
        mc:Ignorable="d"
        Title="Time Converter" Height="350" Width="525">
    <StackPanel x:Name="myStackPanel">
        <Label x:Name="lblNotice" Content="Please note that the program will need to be restarted to convert another time"/>
        <TextBox AcceptsReturn="False" x:Name="txtInput" Text="Please input Ottawa time."/>
        <Button x:Name="btnRun" Click="btnRun_Click" Content="Convert Time"/>
    </StackPanel>
</Window>
